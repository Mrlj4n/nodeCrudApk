
<!-- include header -->
<%-include('include/_header')%>
<!-- include header -->

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i>All Users</a>
            </div>
        </div>
    </div>
    <div class="form-title text-center">
        <h2 class="text-dark">Update user</h2>
    </div>

    <!-- ========== Start Form ========== -->
    <form method="post" id="update_user">
        <div class="new_user">
            <div class="form-group">
                <label for="name" class="text-light">Name</label>
                <input type="hidden" name="id" value="<%= user._id %>">
                <input type="text" required name="name" value="<%= user.name %>" placeholder="Enter name">
            </div>
            <div class="form-group">
                <label for="email" class="text-light">Email</label>
                <input type="text" required name="email" value="<%= user.email %>" placeholder="Enter email">
            </div>
    
            <div class="form-group">
                <label for="gender" class="text-light">Status</label>
                <div class="radio inline">
                    <input type="radio" id="radio-4" name="status" value="Active" <%= user.status == 'Active' || user.status == 'active' ? 'checked' : '' %>>
                    <label for="radio-4" class="radio-label">Active</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-5" name="status" value="Inactive" <%= user.status == 'Inactive' || user.status == 'inactive' ? 'checked' : '' %>>
                    <label for="radio-5" class="radio-label">Inactive</label>
                </div>
            </div>
        </div>
    
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </form>
    <!-- ========== End Form ========== -->

</main>

<!-- include footer -->
<%-include('include/_footer')%>
<!-- include footer -->